#!/bin/bash

set -e

# $IMAGE_NAME var is injected into the build

echo "Build hook running"

docker build \
    --build-arg BUILD_DATE=`date -u +"%Y-%m-%dT%H:%M:%SZ"` \
    --build-arg VCS_REF=`git rev-parse --short HEAD` \
    --build-arg PHPUNIT_VERSION=`curl https://pecl.php.net/feeds/pkg_xdebug.rss | grep "^<title>xdebug [0-9]*\.[0-9]*\.[0-9]*</title>" | awk -F '[ <]' '{ print $3; exit }'` \
    -t $IMAGE_NAME .
