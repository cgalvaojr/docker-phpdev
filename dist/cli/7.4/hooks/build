set -e

echo "Build hook running"

# $IMAGE_NAME var is injected into the build

docker build \
    --build-arg BUILD_DATE=`date -u +"%Y-%m-%dT%H:%M:%SZ"` \
    --build-arg VCS_REF=`git rev-parse --short HEAD` \
    --build-arg XDEBUG_VERSION=2.8.0beta1 \
    -t $IMAGE_NAME .
